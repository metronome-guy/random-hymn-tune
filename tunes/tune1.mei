  <music>
    <body>
      <mdiv>
        <score>
          <scoreDef meter.count="3" meter.unit="4">
            <staffGrp>
              <staffDef n="1" lines="5" clef.shape="G" clef.line="2">
                <!-- F major has 1 flat (Bb) -->
                <keySig sig="1f"/>
                <meterSig count="3" unit="4"/>
              </staffDef>
            </staffGrp>
          </scoreDef>
          <section>
            <!-- F–G–A | Bb (quarters); Bb implied by key sig (no accid on the note) -->
