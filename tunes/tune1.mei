    <!-- Work metadata (tags) -->
    <workDesc>
      <work>
        <!-- Title -->
        <title>Happy Day</title>

        <!-- Key + Major/Minor -->
        <key pname="f" mode="major"/>

        <!-- Duple/Triple (explicit tag + also in scoreDef meterSig) -->
        <annot type="meterGroup">Triple</annot>

